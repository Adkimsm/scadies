{
  "name": "scadies-core",
  "version": "0.0.1",
  "description": "A Blog System Write in Node.js with Express.",
  "main": "./src/main.ts",
  "author": "Kysolva",
  "license": "MIT",
  "private": false,
  "type": "module",
  "dependencies": {
    "express": "^4.18.1",
    "mongodb": "^4.8.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "core-js": "3.6.5",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "start": "nodemon -e ts -w ./src -w ./libs -x \"yarn start:ts\"",
    "start:ts": "node --loader ts-node/esm ./src/main.ts",
    "start:js": "node ./dist/src/main.js",
    "type:check": "tsc --noEmit",
    "beauty": "prettier ./src/**/*.ts --config ./.prettierrc --write",
    "prebuild": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel ./ --out-dir dist --extensions \".ts\" --source-maps inline",
    "build": "npm run build:types && npm run build:js",
    "preserve": "npm run build",
    "serve": "npm run start:js"
  }
}
