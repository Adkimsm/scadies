{
  "name": "scadies-core",
  "version": "0.0.1",
  "description": "A Blog System Write in Node.js with Express.",
  "main": "./src/main.ts",
  "author": "Kysolva",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "body-parser": "^1.20.0",
    "chalk": "4.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "mongodb": "^4.8.0",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "start": "nodemon -e ts -w ./src -w ./libs -x \"yarn start:ts\"",
    "start:ts": "node --loader ts-node/esm ./src/main.ts",
    "start:js": "node ./dist/src/main.js",
    "beauty": "prettier ./src/**/*.ts --config ./.prettierrc --write",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "preserve": "npm run build",
    "serve": "npm run start:js",
    "lint": "eslint ."
