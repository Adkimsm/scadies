{
    "name": "scadies-core",
    "version": "0.0.1",
    "description": "A Blog System Write in Node.js with Express.",
    "main": "./src/main.ts",
    "author": "Kysolva",
    "license": "MIT",
    "private": false,
    "dependencies": {
        "body-parser": "^1.20.0",
        "chalk": "4.1.2",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "express-jwt": "^7.7.5",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^4.8.1",
        "terminal-link": "2.1.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^18.7.3",
        "@types/uuid": "^8.3.4",
        "cpy-cli": "^4.1.0",
        "nodemon": "^2.0.19",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "scripts": {
        "start": "nodemon -e ts -w ./src -w ./libs -x \"yarn start:ts\"",
        "start:ts": "node --loader ts-node/esm ./src/main.ts",
        "start:js": "node ./dist/src/main.js",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "postbuild": "cpy public dist && cpy package.json dist",
        "preserve": "npm run build",
        "serve": "npm run start:js",
        "dev": "npm run start"
    }
}
