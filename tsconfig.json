    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2020",
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "libs"
    ]
}