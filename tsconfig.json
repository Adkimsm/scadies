{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ESNext",
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}